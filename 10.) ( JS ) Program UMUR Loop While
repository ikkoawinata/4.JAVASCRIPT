}

welcome();

var umur, j;


do{
var umur = parseFloat(prompt("Umur anda berapa sekarang : "));
while (( umur < 12) || (umur >= 100));
console.log("Saya tidak yakin umur anda : ", umur);
console.log("Silahkan diulangi......");
console.log();
var umur = parseFloat(prompt("Umur anda berapa sekarang : "))
if ((umur > 12) || ( umur < 19)){
    console.log("waah anda baru beranjak remaja");
    console.log("Gunakan waktu sebaik-baiknya");
}if ((umur >= 19) || (umur <=100)){
    console.log("Anda sudah beranjak tua");
    console.log("Jadilah seseorang yang dewasa");
    console.log();
}
var j = prompt("mau coba lagi ? [Y/N] : ")
}
while (j == 'Y' || j == 'y')
console.log("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~")
